<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>SSS - XSRF - Synchronizer Token Pattern</display-name>
  
  <servlet>
  	<servlet-name>LoginController</servlet-name>
  	<display-name>LoginController</display-name>
  	<description>Blah Blah Blah</description>
  	<servlet-class>controller_servlet.LoginController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>TransferenceController</servlet-name>
  	<display-name>TransferenceController</display-name>
  	<description>Blah Blah Blah</description>
  	<servlet-class>controller_servlet.TransferenceController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SyncTokenProvider</servlet-name>
  	<display-name>SyncTokenProvider</display-name>
  	<description>Blah Blah Blah</description>
  	<servlet-class>controller_servlet.SyncTokenProvider</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>LoginController</servlet-name>
  	<url-pattern>/LoginController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TransferenceController</servlet-name>
  	<url-pattern>/TransferenceController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SyncTokenProvider</servlet-name>
  	<url-pattern>/SyncTokenProvider</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>homepage.jsp</welcome-file>
  </welcome-file-list>
</web-app>